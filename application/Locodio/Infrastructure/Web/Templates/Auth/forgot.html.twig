{% trans_default_domain 'auth' %}
{% extends 'base.html.twig' %}

{% block title %} Locod.io: Forgot your password?{% endblock %}

{% block body %}

    <div>
        <div style="max-width: 450px;" class="mx-auto">
            <div class="bg-gray-50 mt-8 p-8 drop-shadow-xl">
                {# header ----------------------------------------------------------------------------------- #}
                <div class="text-center">
                    <div class="mb-2">
                        <img src="{{ asset('locodio.svg') }}" width="150" class="mx-auto">
                    </div>
                </div>
                <hr class="mt-4">

                {% for message in app.flashes('error') %}
                    <div class="mt-2 mb-2 bg-yellow-100 rounded-lg p-2 text-center text-sm">
                        {{ message | trans }}
                    </div>
                    <hr class="mt-2">
                {% endfor %}

                {% for message in app.flashes('success') %}
                    <div class="mt-2 mb-2 bg-green-300 rounded-lg p-2 text-center text-sm">
                        {{ message | trans }}
                    </div>
                    <hr class="mt-2">
                {% endfor %}

                {# form ------------------------------------------------------------------------------------- #}
                <form action="{{ path('app_forgot') }}" method="post">
                    <div class="mt-2">
                        <label for="username">Email</label>
                    </div>
                    <div class="mt-2">
                        <input type="email"
                               id="username"
                               name="forgotPasswordEmail"
                               required
                               class="border-2 p-2 rounded-lg w-full"
                        />
                    </div>
                    <div class="mt-4">
                        <button type="submit"
                                class="bg-blue-500 w-full text-white rounded-lg uppercase p-2 hover:bg-blue-700">
                            reset password
                        </button>
                    </div>
                </form>

                {# footer link ------------------------------------------------------------------------------ #}
                <div class="mt-8 text-gray-400 text-sm">
                    Password is reset?
                    <a href="{{ path('app_login') }}" class="text-sm text-blue-800 underline">
                        Login here
                    </a>.
                </div>

            </div>
        </div>
    </div>

{% endblock %}
