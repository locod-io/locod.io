{% trans_default_domain 'auth' %}
{% extends 'base-dark.html.twig' %}

{% block title %} locod.io | Sign Up.{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('register') }}
{% endblock %}

{% block body %}

    <div>
        <div style="max-width: 500px;" class="mx-auto">
            <div class="bg-white mt-8 p-8 drop-shadow-xl">
                {# header ----------------------------------------------------------------------------------- #}
                <div class="text-center">
                    <div class="mb-2">
                        <img src="{{ logo }}" width="100" class="mx-auto">
                    </div>
                </div>
                <hr class="mt-4">

                {# error messages --------------------------------------------------------------------------- #}
                {% for message in app.flashes('error') %}
                    <div class="mt-2 mb-2 bg-yellow-100 rounded-lg p-2 text-center text-sm">
                        {{ message | trans }}
                    </div>
                {% endfor %}

                <div class="mt-4 mb-4">
                    {% trans %}register_title{% endtrans %}
                </div>

                <form method="post" autocomplete="off" action="{{ path('app_register_action') }}">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token('register_user') }}">

                    {# honey pot field #}
                    <div class="url-field-wrapper">
                        <label for="website-url">Your website</label>
                        <input type="text" id="website-url" name="url" tabindex="-1" autocomplete="nope"/>
                    </div>

                    <div id="registerApp">
                        <div style="min-height: 500px" class="text-center">
                            <br><br><br><br><br><br>
                            <img src="{{ asset('assets/oval.svg') }}" class="mx-auto"/>
                        </div>
                    </div>

                    {# messsages --------------------------------------------------------------------------- #}
                    {% for message in app.flashes('warning') %}
                        <div class="mt-2 mb-2 bg-yellow-100 rounded-lg p-2 text-center text-sm">
                            {{ message| trans }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('success') %}
                        <div class="mt-2 mb-2 bg-green-300 rounded-lg p-2 text-center text-sm">
                            <div class="message">{{ message| trans }}</div>
                        </div>
                    {% endfor %}

                    {# SSO providers ------------------------------------------------------------------------ #}
                    <div class="mt-8 flex">
                        {% for provider in sso_providers %}
                            {% if provider.driver == 'github' %}
                            <div class="mb-4 text-center mx-auto">
                                <a href="{{ path('app_register_sso', {'providerName': provider.provider|lower}) }}"
                                   class="text-sm text-indigo-800 underline underline-offset-4">
                                    Sign Up with {{ provider.provider }}
                                </a>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                    {# footer ------------------------------------------------------------------------------ #}
                    <div class="mt-8 text-gray-400 text-sm">
                        Already have an account?
                        <a href="{{ path('app_login') }}" class="text-sm text-indigo-800 underline underline-offset-4">
                            Sign In
                        </a>
                    </div>

                    <div class="mt-8 text-gray-400 text-xs text-center">
                        By creating an account, you agree to the
                        <a href="/docs/about/privacy_policy.html" class="text-indigo-500 underline underline-offset-4">Privacy Policy</a>
                        and
                        <a href="/docs/about/terms_of_service.html" class="text-indigo-500 underline underline-offset-4">Terms of Service</a>
                        .
                    </div>

                </form>
            </div>
        </div>
    </div>
    <br><br><br>&nbsp;

{% endblock %}
{% block footer %}
{% endblock %}